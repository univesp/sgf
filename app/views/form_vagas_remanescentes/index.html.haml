                        %input#ementa{:type => "file"}/
                    %td
                      .image-upload  
                        %label.btn.btn-default{:for => "program"}
                          %span.fa.fa-paperclip
                          programa
                        %input#program{:type => "file"}/
                    %td
                      %input{:onclick => "resetForm();", :type => "button", :value => "x"}/
                  %tr
                    %td
                      .checkbox.m-t-xs.m-b-xs
                        %label
                          %input{:type => "checkbox", :value => "option1"}>/
                          Estratégia e Planejamento de Empresas
                    %td
                      %input.form-control{:type => "text"}/
                    %td
                      %input.form-control{:type => "number"}/
                    %td
