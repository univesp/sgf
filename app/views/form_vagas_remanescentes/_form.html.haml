%form{:action => "cadastro-submit", :method => "POST"}
	%div
		%label{:for => "nome"} Nome Completo:
		%input#nome{:name => "nome", :required => "", :type => "text"}/


	%div
		%label{:for => "nomemae"} Nome da Mãe:
		%input#nomemae{:name => "nomemae", :required => "", :type => "text"}/

	
	%div
		%label{:for => "nomepai"} Nome do Pai:
		%input#nomepai{:name => "nomepai", :required => "", :type => "text"}/ 
	
	%div
		%label{:for => "email"} E-mail:
		%input#email{:maxlength => "60", :name => "email", :size => "65", :placeholder => "exemplo@exemplo.com", :type => "text", :required => ""}/

	%div
		%label{:for => "sexo"} Sexo:
		%select#sexo{:name => "sexo",:required => ""}
			%option{:value => ""} Selecione
			%option{:value => "1"}Feminino
			%option{:value => "2"}Masculino 

	%div
		%label{:for => "rg"} Rg:
		%input#rg{:maxlength => "12", :name => "rg",:required => "", :placeholder => "11.111.111-1", :onkeypress => "mascara(this, mrg);", :size => "14", :type => "text"}/ 
	
	%div
		%label{:for => "cpf"} Cpf:
		%input#cpf{:maxlength => "14", :name => "cpf", :required => "", :placeholder => "111.111.111-11", :onblur => "javascript: validarCPF(this.value);", :onkeypress => "javascript: mascara(this, cpf_mask);", :type => "text"}/

	
	%div
		%label{:for => "datanasc"} Data de nascimento:
		%input#data{:maxlength => "10", :name => "datanasc", :required => "", :placeholder => "11/11/1111", :onkeypress => "mascara(this, mdata);",  :pattern => "(?:0[1-9]|1[0-9]|2[0-9])|(?:(?!02)(?:0[1-9]|1[0-2])-(?:30))|(?:(?:0[13578]|1[02])-31))/(?:(?:0[1-9]|1[0-2])/(?:19|20)[0-9]{2}", :size => "14", :type => "text"}/
	
	%div
		%label{:for => "cep"} Cep:
		%input#cep{:maxlength => "9", :name => "cep", :placeholder => "11111-000", :required => "", :onkeypress => "mascara(this, mcep);", :size => "10", :type => "text"}/ 
	
	%div
		%label{:for => "bairro"} Bairro:
		%input#bairro{:name => "bairro", :placeholder => "Tal", :type => "text", :required => ""}/ 	
	
	
	%div
		%label{:for => "endereco"} Endereço:
		%input#endereco{:name => "endereco", :placeholder => "Rua/Av... Tal", :type => "text", :required => ""}

	%div
		%label{:for => "estados"} Estado:
		%input#estados{:name => "estados", :required => "", :type => "text"}/ 

	%div
		%label{:for => "cidades"} Cidade:
		%input#cidades{:name => "cidades", :required => "", :type => "text"}/

	%div
		%label{:for => "tel"} Telefone:
		%input#tel{:maxlength => "15", :name => "tel", :type => "text", :required => ""}/

	%div
		%label{:for => "cel"} Celular:
		%input{:maxlength => "15", :name => "cel", :onkeyup => "mascara( this, mtel );", :type => "text", :required => ""}/


	%div
		%label{:for => "usuario"} Usuário:
		%input#usuario{:name => "usuario", :type => "text", :required => ""}/ 

	%div
		%label{:for => "senha1"} Senha:
		%input{:name => "senha1", :onchange => "form.senha2.pattern = this.value;", :pattern => "[a-zA-Z0-9]{16}", :placeholder => "(16) Letras e/ou numeros", :required => "", :type => "password"}/


	%div
		%label{:for => "senha2"} Confirme a senha:
		%input{:name => "senha2", :pattern => "[a-zA-Z0-9] {16}", :placeholder => "(16) Letras e/ou numeros", :required => "", :type => "password"}/


	%div
		%input{:type => "submit", :value => "Enviar", :onClick => "validarSenha()"}
		%input{:type => "reset", :value => "Limpar Formulário"}













